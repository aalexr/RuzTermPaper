<Page
  x:Class="RuzTermPaper.Pages.FirstRunPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:RuzTermPaper.Pages"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <RelativePanel>
                <TextBlock x:Name="WelcomeTextBlock"
              Style="{StaticResource HeaderTextBlockStyle}"
              Margin="8,16,8,16"
              HorizontalTextAlignment="Center">
          <Run Text="Добро пожаловать в приложение"/>
          <LineBreak/>
          <Run Text="Расписание ВШЭ"/>
                </TextBlock>
                <TextBlock x:Name="Hint"
            Margin="8"
            Text="Давайте настроим приложение для Вас"
            RelativePanel.Below="WelcomeTextBlock"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            Style="{StaticResource BaseTextBlockStyle}"/>

                <TextBox x:Name="EmailBlock" x:Load="False"
                         KeyDown="EmailBlock_KeyDown"
                         Margin="8"
                         PlaceholderText="example@edu.hse.ru"
                         RelativePanel.Below="Hint"
                         RelativePanel.AlignHorizontalCenterWithPanel="True"
                Width="280">
                    <TextBox.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition/>
                        </TransitionCollection>
                    </TextBox.Transitions>
                </TextBox>

            </RelativePanel>
            <Button x:Name="StartButton"
          x:Uid="StartButton"
          Content="Приступить"
          Click="Button_Click"
          HorizontalAlignment="Center"
          Margin="8"
          Style="{StaticResource ButtonRevealStyle}"/>
        </StackPanel>

        <Button x:Name="ForLecturersButton"
        Style="{StaticResource TextBlockButtonStyle}"
        x:Load="False"
        Content="Вход для преподавателей"
        HorizontalAlignment="Center"
        Margin="0,0,0,16"
        VerticalAlignment="Bottom"/>
    </Grid>
</Page>
