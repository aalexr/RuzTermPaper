<Page
  x:Class="RuzTermPaper.Pages.FirstRunPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:RuzTermPaper.Pages"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

    <Grid Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <RelativePanel>
                <TextBlock x:Name="WelcomeTextBlock"
              Style="{StaticResource HeaderTextBlockStyle}"
              Margin="8,16,8,16"
              HorizontalTextAlignment="Center">
                    <Run x:Uid="FirstRunPage_WelcomeTextBlock_Welcome"/>
                    <LineBreak/>
                    <Run x:Uid="FirstRunPage_WelcomeTextBlock_AppName"/>
                </TextBlock>

                <TextBlock x:Name="Hint"
                           x:Uid="FirstRunPage_Hint"
                           Margin="8"
                           RelativePanel.Below="WelcomeTextBlock"
                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                           Style="{StaticResource BaseTextBlockStyle}"/>

                <TextBox x:Name="EmailBlock" x:Load="False"
                         KeyDown="EmailBlock_KeyDown"
                         Margin="8"
                         PlaceholderText="example@edu.hse.ru"
                         RelativePanel.Below="Hint"
                         RelativePanel.AlignHorizontalCenterWithPanel="True"
                         Width="280">
                    <TextBox.Transitions>
                        <TransitionCollection>
                            <EntranceThemeTransition/>
                        </TransitionCollection>
                    </TextBox.Transitions>
                </TextBox>

            </RelativePanel>
            <Button x:Name="StartButton"
                    x:Uid="FirstRunPage_StartButton"
                    Click="Button_Click"
                    HorizontalAlignment="Center"
                    Margin="8"
                    Style="{StaticResource ButtonRevealStyle}"/>
        </StackPanel>
        
        <Button x:Name="ForLecturersButton"
                x:Uid="FirstRunPage_ForLecturersButton"
                Style="{StaticResource TextBlockButtonStyle}"
                x:Load="False"
                Click="ForLecturersButton_Click"
                HorizontalAlignment="Center"
                Margin="0,0,0,16"
                VerticalAlignment="Bottom"/>
    </Grid>
</Page>
